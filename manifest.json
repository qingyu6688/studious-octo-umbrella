{
  "manifest_version": 3,
  "name": "网页内容爬取器",
  "version": "1.0",
  "description": "爬取网页上的图片、视频和文字信息",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
